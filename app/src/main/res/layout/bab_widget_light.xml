<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp" >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="32dp"
        android:layout_height="41dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/bab_widget_icon"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_alignParentTop="true"
        android:textSize="14dp"
        android:textColor="@color/widget_text_color_light" />
    
    <TextView
        android:id="@+id/tv_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:layout_alignLeft="@id/tv_date"
        android:layout_marginTop="2dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/widget_text_color_light"/>

    <TextView
        android:id="@+id/tv_sub_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_main_menu"
        android:layout_alignLeft="@id/tv_main_menu"
        android:layout_marginTop="2dp"
        android:textSize="12dp"
        android:textColor="@color/widget_text_color_light"/>

    <Button
        android:id="@+id/btn_today"
        android:layout_width="63dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_date"
        android:layout_marginRight="10dp"
        android:padding="1dp"
        android:gravity="center"
        android:textSize="10dp"
        android:textColor="@color/widget_text_color_light"
        android:background="@drawable/b_btn_light"/>


    <ProgressBar
        style="@android:style/Widget.Holo.Light.ProgressBar.Small"
        android:id="@+id/pb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_today"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@id/btn_today"
        android:indeterminate="false"
        android:visibility="gone"/>
</RelativeLayout>